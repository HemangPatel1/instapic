<h1>All Pics</h1>
<p><%= link_to 'New Pic', new_pic_path %></p>                    
<p><%= link_to 'All Pics', pics_path %></p>                    
 
  <% @pic.each do |pic| %>
<table>
    <tr>
      <td>
      <a href="<%= pic_path(pic) %>">
        <%= image_tag pic.image.url(:medium) , class: 'uploaded-pic' %>
      </a>
      </td>
    </tr>
    <tr>
      <td><center><em><%= pic.caption %> by @<%= pic.user.username if pic.user %><br>
        Posted <%= time_ago_in_words(pic.created_at) %> ago
      </em></center></td>
    </tr>
  <% end %>
</table>