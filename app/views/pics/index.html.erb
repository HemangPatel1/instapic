<h1>All Pics</h1>
<p><%= link_to 'New Pic', new_pic_path %></p>                    
<p><%= link_to 'My Pics', mypics_pics_path %></p>


<form action="<%= pics_path %>" method="get">
  <%= text_field_tag :search, params[:search], placeholder: "Search Pics" %>
  <%= submit_tag "Search", :name => nil %>
</form>

 
  <% @pics.each do |pic| %>
<table>
    <tr>
      <td style="vertical-align: top; width: 130px;">
        <strong><%= pic.user.username if pic.user %></strong><br>
        <small><%= time_ago_in_words(pic.created_at) %> ago</small>
      </td>

      <td>
      <a href="<%= pic_path(pic) %>">
        <%= image_tag pic.image.url(:medium) , class: 'uploaded-pic' %>
      </a>
      </td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
        <center>
          <em><%= pic.caption %></em>
          <% pic.tags.each do |tag| %>
          <%= link_to tag.tag, tag %> <% end %>
          <br><br><br>
        </center>
      </td>
    </tr>
  <% end %>
</table>


