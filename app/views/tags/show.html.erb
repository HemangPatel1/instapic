<h1><%= @tag.tag %></h1>

<% @tag.pics.each do |pic| %>
<table>
    <tr>
      <th style="vertical-align: top; width: 130px;">
       
        <small><%= time_ago_in_words(pic.created_at) %> ago</small>
      </th>

      <th>
      <a href="<%= pic_path(pic) %>">
        <%= image_tag pic.image.url(:medium) , class: 'uploaded-pic' %>
      </a>
      </th>
    </tr>
    <tr>
      <th>
      </th>
      <th>
        <center>
          <em><%= pic.caption %></em>
          <% pic.tags.each do |tag| %><%= tag.tag %> <% end %>
          <br><br><br>
        </center>
      </th>
    </tr>
</table>
<% end %>


